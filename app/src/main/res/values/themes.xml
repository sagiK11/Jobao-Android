<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jobao" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grayish_red_5</item>
        <item name="colorPrimaryVariant">@color/grayish_red_7</item>
        <item name="colorOnPrimary">@color/grayish_red_2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_5</item>
        <item name="colorSecondaryVariant">@color/black_7</item>
        <item name="colorOnSecondary">@color/black_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="actionBarStyle">@style/CustomActionBar</item>


        <!-- Customize your theme here. -->
    </style>-->

    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/actionbar_layer_list</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="text_layout">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="buttons">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="cornerRadius">1dp</item>
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

</resources>