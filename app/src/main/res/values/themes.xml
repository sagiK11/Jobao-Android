<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jobao" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnPrimary">@color/theme_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_secondary_dark</item>
        <item name="colorOnSecondary">@color/theme_secondary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="text_layout">
        <item name="boxBackgroundColor">@color/soft_theme</item>
    </style>

    <style name="buttons">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>